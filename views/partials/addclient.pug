div.mdl-grid(ng-controller="addCliCtrl")

	div.mdl-card.mdl-cell.mdl-cell--6-col.mdl-cell--12-col-tablet
		div.mdl-card__title
			h2.mdl-card__title-text Agregar un cliente
		div.mdl-card__supporting-text
			div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.w100
				input.mdl-textfield__input(type="text", id="nombre", ng-model="add.data.nombre")
				label.mdl-textfield__label(for="nombre") Nombre
			br
			div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.w100
				input.mdl-textfield__input(type="text", id="apell", ng-model="add.data.apellido")
				label.mdl-textfield__label(for="nombre") Apellido
			br
			div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.w50
				input.mdl-textfield__input(type="number", id="telf", ng-model="add.data.telf")
				label.mdl-textfield__label(for="telf") Telefono 1
			div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.w50
				input.mdl-textfield__input(type="number", id="cel", ng-model="add.data.cel")
				label.mdl-textfield__label(for="cel") Celular
			br
			div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.w100
				input.mdl-textfield__input(type="email", id="corr", ng-model="add.data.correo")
				label.mdl-textfield__label(for="corr") Correo
			br
			div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.w100
				input.mdl-textfield__input(type="number", id="ruc", ng-model="add.data.ruc")
				label.mdl-textfield__label(for="ruc") RUC
			br
			div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label.w100
				input.mdl-textfield__input(type="text", id="direc", ng-model="add.data.direccion")
				label.mdl-textfield__label(for="direc") Direccion
			button.mdl-button.mdl-js-button.mdl-js-ripple-effect(ng-click="add.addCliente()") Agregar cliente
